{
  "name": "scuderia-frontend",
  "version": "0.1.0",
  "private": true,
  "author": "see AUTHORS",
  "scripts": {
    "prepare": "panda codegen",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write ."
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,tsx,mdx}": [
      "prettier --write --",
      "eslint --fix --"
    ],
    "*.{js,cjs,mjs,ts,tsx,json,md,mdx,yaml,yml}": [
      "prettier --write --"
    ]
  },
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "arrowParens": "always",
    "semi": true,
    "editorconfig": true
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals"
    ]
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.7.3",
    "@supabase/supabase-js": "^2.31.0",
    "next": "^13.4.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.8.0",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "encoding": "^0.1.13",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.12",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "simple-git-hooks": "^2.9.0"
  },
  "engines": {
    "node": "18",
    "pnpm": "^8.6.10"
  },
  "volta": {
    "node": "18.17.0",
    "pnpm": "8.6.10"
  }
}
